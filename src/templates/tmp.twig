{% extends "_layouts/cp" %}
{% import "_includes/forms" as forms %}

{% do view.registerAssetBundle("czechitas\\czechitoviny\\assetbundles\\czechitoviny\\CzechitovinyAsset") %}
{% do view.registerAssetBundle("czechitas\\czechitoviny\\assetbundles\\indexcpsection\\IndexCPSectionAsset") %}

{# Link for the ? icon at the bottom of the page #}
{% set docsUrl = "https://github.com/czechitoviny/czechitoviny/blob/master/README.md" %}

{# The title of this CP section #}
{% set title = "Czechitoviny" %}

{# The URL to this plugin's base CP section #}
{% set pluginCpUrl = url('czechitoviny') %}

{# Get a URL to an image in our AssetBundle #}
{% set iconUrl = view.getAssetManager().getPublishedUrl('@czechitas/czechitoviny/assetbundles/indexcpsection/dist', true) ~ '/img/Index-icon.svg' %}

{# Content that should appear in the page header#}
{% set extraPageHeaderHtml %}
    <div class="buttons">
        <a href="{{ pluginCpUrl }}" class="btn submit add icon">{{ "Click Me!"|t('czechitoviny/tmp') }}</a>
    </div>
{% endset %}

{% set fullPageForm = true %}

{# The content of the CP Section#}
{% set content %}
    <h2>{{ 'Probehlo' }}</h2>
    <img src="{{ iconUrl }}" height="64" width="64" />
    <p class="textline"></p>
{% endset %}
